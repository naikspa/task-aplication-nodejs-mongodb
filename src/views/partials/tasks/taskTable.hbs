{{#if tasks}}
  <table class='table table-bordered table-hover table-dark'>
    <thead>
      <tr>
        <th>N.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td class='imp1'>{{title}}</td>
          <td class='imp2'>{{description}}</td>
          <td>

            {{#if done}}
              <a
                href='/tasks/{{_id}}/toggleDone'
                class='btn btn-dark'
              >Undone</a>
            {{else}}
              <a
                href='/tasks/{{_id}}/toggleDone'
                class='btn btn-success'
              >Done</a>
            {{/if}}

            <a href='/tasks/{{_id}}/delete' class='btn btn-danger'>Delete</a>
            <a href='/tasks/{{_id}}/edit' class='btn btn-info'>Update</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>

{{else}}
  <div class='text-center'>
    <h1>You have no Tasks!</h1>
    <img src='' alt='' />
  </div>
{{/if}}